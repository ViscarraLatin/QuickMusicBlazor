@page "/Genero"
@using Models
@using Services
@inject IGeneroService GeneroService
<MudText Typo="Typo.h3" Class="text-center pa-4 shades-text text-white ">GÉNERO</MudText>
<MudGrid>
    @foreach (var item in deptos)
    {string Genero = "";
        <MudItem xs="12" sm="10" md="6" lg="4">
            <MudCard Class="black">
                <MudCardHeader Class=" pa-4 indigo  shades-text text-white ">
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@item.Nombre</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardActions Class="center">
                    <img src="@item.Imagen" elvation="25" class="rounded-1g" width="60%" height="auto">
                </MudCardActions>
                <MudCardContent Class=" pa-4 indigo  shades-text text-white ">
                    @switch (item.Id)
                    {
                        case 1:
                            Genero = "Genero";
                            break;
                    }
                 

                </MudCardContent>
                <MudCardActions>
                    <MudButton Link="@($"/genero/{item.Id}")"  Variant="Variant.Text" Color="Color.Primary">Ver  Genero</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }
</MudGrid>
@code {
    IEnumerable<Genero> deptos = new List<Genero>();
    protected override async Task OnInitializedAsync()
    {
        deptos = await GeneroService.GetAll();
    }
}