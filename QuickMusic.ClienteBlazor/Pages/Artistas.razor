@page "/Artista"
@using Models
@using Services
@inject IArtistaService ArtistaService
   
    <MudText Class="text-center pa-4 shades-text text-white " Typo="Typo.h3">ARTISTA</MudText>
    <MudGrid Class="">
        @foreach (var item in deptos)
        {
            string Artista = "";
            <MudItem xs="12" sm="10" md="6" lg="4">
                <MudCard Class="Grey">
                    <MudCardHeader Class=" pa-4 indigo  shades-text text-white ">
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">@item.Nombre</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent Class="pa-4  indigo shades-text text-white ">
                        @switch (item.Id)
                        {
                            case 1:
                                Artista = "Artista";
                                break;
                        }
                        <MudText Typo="Typo.body2">Artista @Artista</MudText>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton EndIcon="@Icons.Filled.PlaylistPlay" Link="@($"/vercanciones/{item.Id}")"
                                   Variant="Variant.Text" Color="Color.Primary" Class="oi-align-center">Escucha la musica </MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        }
    </MudGrid>

    @code {
        IEnumerable<Artista> deptos = new List<Artista>();
        protected override async Task OnInitializedAsync()
        {
            deptos = await ArtistaService.GetAll();
        }
    }